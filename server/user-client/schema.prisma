}


model EventTicket {
  id          String    @id @default(cuid()) @map("_id")
  name        String
  date        String
  time        String
  image       String
  description String
  price       Int
}

model User {
  id                  String  @id @default(cuid()) @map("_id")
  birthYear           String?
  gender              String?
  location            String?
  newsLetter          Boolean?
  isPresentLaunchParty Boolean?
  email               String  @unique
}





